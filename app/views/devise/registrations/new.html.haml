%h2 Sign upp
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :family_name
    %br/
    = f.text_field :family_name
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :kana_family_name
    %br/
    = f.text_field :kana_family_name
  .field
    = f.label :kana_first_name
    %br/
    = f.text_field :kana_first_name
  .field
    = f.label :birth_year
    %br/
    = f.number_field :birth_year
  .field
    = f.label :birth_month
    %br/
    = f.number_field :birth_month
  .field
    = f.label :birth_day
    %br/
    = f.number_field :birth_day

  = f.fields_for :address do |f|
    .field
      = f.label :zip_code
      %br/
      = f.number_field :zip_code
    .field
      = f.label :prefecture
      %br/
      = f.text_field :prefecture
    .field
      = f.label :municipality
      %br/
      = f.text_field :municipality
    .field
      = f.label :address
      %br/
      = f.text_field :address
    .field
      = f.label :apartment_name
      %br/
      = f.text_field :apartment_name
    .field
      = f.label :phone_number
      %br/
      = f.number_field :phone_number
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"

= render partial: "template/header"
.CategoryWrapper
  .CategoryHeader
    %ol.CategoryHeader__list
      %li
        =link_to root_path do
          フリマ
          = icon('fa', 'angle-right')
      %li
        %span カテゴリ一覧
  .CtegoryMain
    .CategoryParents
      - @parents.each do |parent|
        .CategoryParents__index
          = parent.name
    - @parents.each do |parent|
      .CtategoryBox
        .CategoryBox__title
          = parent.name
        - parent.children.each do |child|
          .CategoryContent
            .CategoryContent__title
              = child.name
            .CategoryContent__items
              - child.children.each do |category|
                .CategorItem
                  = category.name
= render partial: "template/footer"
= render partial: "template/exhibit"